<article>
  <header>
    <h1><%= @movie.title %></h1>
  </header>
  <h3><%= @movie.description %></h3>
  <table>
    <tr>
      <th>Released:</th>
      <td><%= @movie.released_on.to_s(:released_on) %></td>
    </tr>
    <tr>
      <th>Rating:</th>
      <td><%= @movie.rating %></td>
    </tr>
    <tr>
      <th>Total Gross:</th>
      <td><%= format_total_gross(@movie) %></td>
    </tr>
  </table>
</article>

<p>
  <%= link_to "All Movies", root_path %>
</p>
